<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/shape_select_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="450dp">
                <TextView
                    android:id="@+id/tv_confirm"
                    android:padding="15dp"
                    android:layout_alignParentRight="true"
                    android:text="确定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:text="设备类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/rg_device"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_device_light"
                            android:text="灯光设配"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_device_others"
                            android:layout_marginStart="10dp"
                            android:text="其他"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:text="区域类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/rg_area"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_area_meeting"
                            android:text="会议室"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_area_seat"
                            android:layout_marginStart="10dp"
                            android:text="工位"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_area_equipment"
                            android:layout_marginStart="10dp"
                            android:text="健身"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="灯光配置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/rg_light_free"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="空闲中："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_free_green"
                            android:layout_marginStart="10dp"
                            android:text="绿色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_free_red"
                            android:layout_marginStart="10dp"
                            android:text="红色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_free_yellow"
                            android:layout_marginStart="10dp"
                            android:text="黄色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_free_close"
                            android:layout_marginStart="10dp"
                            android:text="关闭"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_light_ing"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="会议中："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_ing_green"
                            android:layout_marginStart="10dp"
                            android:text="绿色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_ing_red"
                            android:layout_marginStart="10dp"
                            android:text="红色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_ing_yellow"
                            android:layout_marginStart="10dp"
                            android:text="黄色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_light_ing_close"
                            android:layout_marginStart="10dp"
                            android:text="关闭"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_light_seat"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="办公区："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_seat_green"
                            android:layout_marginStart="10dp"
                            android:text="绿色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_seat_red"
                            android:layout_marginStart="10dp"
                            android:text="红色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_seat_yellow"
                            android:layout_marginStart="10dp"
                            android:text="黄色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_seat_close"
                            android:layout_marginStart="10dp"
                            android:text="关闭"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_light_equipment"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="健身房："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_equipment_green"
                            android:layout_marginStart="10dp"
                            android:text="绿色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_equipment_red"
                            android:layout_marginStart="10dp"
                            android:text="红色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_equipment_yellow"
                            android:layout_marginStart="10dp"
                            android:text="黄色"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rb_equipment_close"
                            android:layout_marginStart="10dp"
                            android:text="关闭"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:text="Host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/et_host"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </RelativeLayout>

</RelativeLayout>
