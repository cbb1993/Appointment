<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <TextView
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="预定会议"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  <LinearLayout
      android:layout_marginLeft="50dp"
      android:layout_marginTop="120dp"
      android:id="@+id/ll_input"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <LinearLayout
          android:focusableInTouchMode="true"
          android:focusable="true"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="@color/white"
              android:text="会议名称："
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <EditText
              android:id="@+id/et_name"
              android:layout_width="200dp"
              android:layout_height="40dp"
              android:background="@drawable/shape_select_bg"
              android:hint="会议名称"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:textColor="@color/black"
              android:textSize="14sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="40dp">
          <TextView
              android:textColor="@color/white"
              android:text="会议时间："
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/tv_start"
              android:gravity="center"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:background="@drawable/shape_select_bg"
              android:textColor="@color/black"
              android:text="开始时间"
              android:layout_width="90dp"
              android:layout_height="40dp" />
          <TextView
              android:textColor="@color/white"
              android:text=" ~ "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/tv_end"
              android:gravity="center"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:text="结束时间"
              android:background="@drawable/shape_select_bg"
              android:textColor="@color/black"
              android:layout_width="90dp"
              android:layout_height="40dp" />
      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="@color/white"
              android:text="参会人员："
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/tv_user"
              android:gravity="center"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:background="@drawable/shape_select_bg"
              android:textColor="@color/black"
              android:text="参会人员"
              android:layout_width="wrap_content"
              android:layout_height="40dp" />

      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="@color/white"
              android:text="签到模式 ："
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <RadioGroup
              android:id="@+id/rg_select_sign"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <RadioButton
                  android:id="@+id/rb_sign_1"
                  android:textColor="@color/white"
                  android:text="不需要"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_sign_2"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="人脸签到"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_sign_3"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="手机签到"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_sign_4"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="手机和人脸二者选一"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </RadioGroup>

      </LinearLayout>

      <LinearLayout
          android:gravity="center_vertical"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="@color/white"
              android:text="通知模式 ："
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <RadioGroup
              android:id="@+id/rg_select_notify"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <RadioButton
                  android:id="@+id/rb_notify_1"
                  android:textColor="@color/white"
                  android:text="短信"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_2"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="邮箱"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_3"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="小程序"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_4"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="短信+邮箱"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_5"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="短信+小程序"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_6"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="邮箱+小程序"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:id="@+id/rb_notify_7"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/white"
                  android:text="短信+邮箱+小程序"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

          </RadioGroup>

      </LinearLayout>
  </LinearLayout>

    <com.huanhong.appointment.RangeBar
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll_input"
        android:id="@+id/range"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </com.huanhong.appointment.RangeBar>

    <Button
        android:id="@+id/btn_complete"
        android:layout_below="@+id/range"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="完成"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>